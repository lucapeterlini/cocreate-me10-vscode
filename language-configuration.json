{
  "comments": {
    "blockComment": [ "{", "}" ]
  },
  "brackets": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(DEFINE|IF|WHILE|LOOP)",
      "end": "^\\s*(END_DEFINE|END_IF|END_WHILE|END_LOOP)"
    }
  },
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(DEFINE|IF|ELSE|ELSE_IF|WHILE|LOOP)\\b.*$",
    "decreaseIndentPattern": "^\\s*(END_DEFINE|END_IF|ELSE|ELSE_IF|END_WHILE|END_LOOP)\\b.*$"
  }
}